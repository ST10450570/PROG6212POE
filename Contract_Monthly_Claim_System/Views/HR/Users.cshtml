@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "User Management";
}

<div class="d-flex justify-content-between align-items-center mb-4 border-bottom-themed pb-2">
    <h1 class="h2"><i class="fas fa-users-cog me-2"></i>User Management</h1>
    <a asp-action="CreateUser" class="btn btn-primary">
        <i class="fas fa-user-plus me-1"></i>Add New User
    </a>
</div>

<div class="card">
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="text-center p-5">
                <i class="fas fa-users fa-3x text-secondary mb-3"></i>
                <h4 class="text-secondary">No users found.</h4>
                <p>Click "Add New User" to create the first user.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Department</th>
                            <th>Hourly Rate</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td class="fw-bold">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle-sm me-2">
                                            <span class="avatar-initials-sm">@user.Initials</span>
                                        </div>
                                        @user.FullName
                                    </div>
                                </td>
                                <td>@user.Email</td>
                                <td>
                                    @switch (user.Role)
                                    {
                                        case UserRole.Lecturer:
                                            <span class="badge bg-primary">Lecturer</span>
                                            break;
                                        case UserRole.Coordinator:
                                            <span class="badge bg-warning">Coordinator</span>
                                            break;
                                        case UserRole.Manager:
                                            <span class="badge bg-info">Manager</span>
                                            break;
                                        case UserRole.HR:
                                            <span class="badge bg-success">HR</span>
                                            break;
                                    }
                                </td>
                                <td>@user.Department</td>
                                <td>
                                    @if (user.HourlyRate.HasValue)
                                    {
                                        @user.HourlyRate.Value.ToString("C", new System.Globalization.CultureInfo("en-ZA"))
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    @if (user.IsActive)
                                    {
                                        <span class="badge bg-success-soft">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger-soft">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-outline-primary" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        @if (user.IsActive)
                                        {
                                            <form asp-action="DeactivateUser" asp-route-id="@user.Id" method="post" class="d-inline"
                                                  onsubmit="return confirm('Are you sure you want to deactivate @user.FullName?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-warning" title="Deactivate">
                                                    <i class="fas fa-ban"></i>
                                                </button>
                                            </form>
                                        }
                                        <form asp-action="HardDeleteUser" asp-route-id="@user.Id" method="post" class="d-inline"
                                              onsubmit="return confirm('WARNING: This will PERMANENTLY delete @user.FullName and all associated data. This action cannot be undone. Are you absolutely sure?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-danger" title="Permanently Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-action="Dashboard" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
    </a>
</div>