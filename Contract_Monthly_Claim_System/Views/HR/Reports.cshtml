@model IEnumerable<Claim>

@{
    ViewData["Title"] = "Approved Claims Report";
}

<div class="d-flex justify-content-between align-items-center mb-4 border-bottom-themed pb-2">
    <h1 class="h2"><i class="fas fa-file-invoice-dollar me-2"></i>Approved Claims for Payment</h1>
    <div>
        <form asp-action="GenerateReport" asp-route-reportType="approved" method="post" class="d-inline me-2">
            @Html.AntiForgeryToken()
            <input type="hidden" name="format" value="csv" />
            <button type="submit" class="btn btn-success">
                <i class="fas fa-file-csv me-1"></i>Export to CSV
            </button>
        </form>
        <form asp-action="GenerateReport" asp-route-reportType="approved" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <input type="hidden" name="format" value="pdf" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-file-pdf me-1"></i>Export to PDF
            </button>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="text-center p-5">
                <i class="fas fa-file-invoice fa-3x text-secondary mb-3"></i>
                <h4 class="text-secondary">No approved claims found.</h4>
                <p>Approved claims will appear here for payment processing.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>Claim #</th>
                            <th>Lecturer</th>
                            <th>Email</th>
                            <th>Department</th>
                            <th>Hours</th>
                            <th>Rate</th>
                            <th>Amount</th>
                            <th>Submitted</th>
                            <th>Approved By</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model)
                        {
                            <tr>
                                <td class="fw-bold">
                                    <a asp-controller="Claims" asp-action="Details" asp-route-id="@claim.Id">
                                        @claim.ClaimNumber
                                    </a>
                                </td>
                                <td>@claim.User?.FullName</td>
                                <td>@claim.User?.Email</td>
                                <td>@claim.User?.Department</td>
                                <td>@claim.HoursWorked hrs</td>
                                <td>@claim.HourlyRate.ToString("C", new System.Globalization.CultureInfo("en-ZA"))</td>
                                <td class="fw-bold">@claim.TotalAmount.ToString("C", new System.Globalization.CultureInfo("en-ZA"))</td>
                                <td>@claim.SubmittedDate?.ToString("dd MMM yyyy")</td>
                                <td>@claim.Manager?.FullName</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th colspan="6" class="text-end">Total:</th>
                            <th class="fw-bold">@Model.Sum(c => c.TotalAmount).ToString("C", new System.Globalization.CultureInfo("en-ZA"))</th>
                            <th colspan="2"></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        }
    </div>
</div>