@{
    ViewData["Title"] = "Welcome";
}

<div class="text-center">
    <div class="card p-4 p-md-5 mb-5">
        <h1 class="display-3 fw-bold">Contract Monthly Claim System</h1>
        <p class="lead text-secondary mt-3 mb-4">
            Streamlining the claim submission and approval process for Independent Contractor Lecturers with eƯiciency and transparency.
        </p>
    </div>

    <div class="card p-4">
        <h4 class="mb-4">Select a Role to Begin</h4>
        <div class="d-grid gap-3 col-md-6 mx-auto">
            <form asp-action="SetUser" method="post">
                <input type="hidden" name="userId" value="1" />
                <button type="submit" class="btn btn-primary btn-lg w-100">
                    <i class="fas fa-user-graduate me-2"></i> Log in as Lecturer
                </button>
            </form>
            <form asp-action="SetUser" method="post">
                <input type="hidden" name="userId" value="2" />
                <button type="submit" class="btn btn-success btn-lg w-100">
                    <i class="fas fa-tasks me-2"></i> Log in as Coordinator
                </button>
            </form>
            <form asp-action="SetUser" method="post">
                <input type="hidden" name="userId" value="3" />
                <button type="submit" class="btn btn-warning btn-lg w-100">
                    <i class="fas fa-user-tie me-2"></i> Log in as Manager
                </button>
            </form>
        </div>
    </div>
</div>