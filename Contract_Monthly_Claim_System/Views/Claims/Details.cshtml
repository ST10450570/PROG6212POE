@model Claim

@{
    ViewData["Title"] = $"Claim Details - {Model.ClaimNumber}";
}

<div class="row">
    <div class="col-lg-8">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-file-invoice-dollar me-2"></i>Claim Details</h5>
                <partial name="_StatusLabel" model="Model.Status" />
            </div>
            <div class="card-body">
                <div class="detail-grid">
                    <div>
                        <div class="detail-label">Claim Number</div>
                        <div class="detail-value">@Model.ClaimNumber</div>
                    </div>
                    <div>
                        <div class="detail-label">Claimant</div>
                        <div class="detail-value">@Model.User?.FullName</div>
                    </div>
                    <div>
                        <div class="detail-label">Submitted On</div>
                        <div class="detail-value">@(Model.SubmittedDate?.ToString("dd MMM yyyy") ?? "Not Submitted")</div>
                    </div>
                    <div>
                        <div class="detail-label">Hours Worked</div>
                        <div class="detail-value">@Model.HoursWorked hrs</div>
                    </div>
                    <div>
                        <div class="detail-label">Hourly Rate</div>
                        <div class="detail-value">@Model.HourlyRate.ToString("C", new System.Globalization.CultureInfo("en-ZA"))</div>
                    </div>
                    <div class="total-amount">
                        <div class="detail-label">Total Amount</div>
                        <div class="detail-value fw-bold">@Model.TotalAmount.ToString("C", new System.Globalization.CultureInfo("en-ZA"))</div>
                    </div>
                </div>

                <hr class="my-4">
                <h6><i class="fas fa-pencil-alt me-2"></i>Work Description</h6>
                <div class="info-box">@Model.WorkDescription</div>

                @if (!string.IsNullOrEmpty(Model.Notes))
                {
                    <h6 class="mt-3"><i class="far fa-sticky-note me-2"></i>Additional Notes</h6>
                    <div class="info-box">@Model.Notes</div>
                }

                @if (Model.Status == ClaimStatus.Rejected)
                {
                    <h6 class="mt-3"><i class="fas fa-times-circle me-2 text-danger"></i>Rejection Reason</h6>
                    <div class="info-box border-danger">@Model.RejectionReason</div>
                }
                @if (Model.Status == ClaimStatus.Returned || Model.Status == ClaimStatus.Verified || Model.Status == ClaimStatus.Approved)
                {
                    <h6 class="mt-3"><i class="fas fa-comment-dots me-2"></i>Reviewer Comments</h6>
                    <div class="info-box">@(string.IsNullOrEmpty(Model.ReviewerComments) ? "No comments provided." : Model.ReviewerComments)</div>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-paperclip me-2"></i>Supporting Documents</h6>
            </div>
            <div class="card-body">
                @if (Model.Documents != null && Model.Documents.Any())
                {
                    <ul class="list-unstyled mb-0">
                        @foreach (var document in Model.Documents)
                        {
                            <li class="document-item">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-file-alt fa-2x me-3 text-secondary"></i>
                                    <div class="fw-bold">@document.FileName</div>
                                </div>
                                <div class="document-actions">
                                    <a asp-controller="Documents" asp-action="Download" asp-route-id="@document.Id" class="btn btn-sm btn-outline-secondary" title="Download">
                                        <i class="fas fa-download"></i>
                                    </a>
                                </div>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-center text-secondary py-3">No documents uploaded.</p>
                }
            </div>
        </div>

        @{
            var currentUser = UserSession.GetCurrentUser();

            // LECTURER ACTIONS
            if (currentUser?.Role == UserRole.Lecturer)
            {
                <div class="card">
                    <div class="card-header">
                        <h6 class="mb-0"><i class="fas fa-bolt me-2"></i>Quick Actions</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            @if (Model.Status == ClaimStatus.Draft || Model.Status == ClaimStatus.Returned)
                            {
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                    <i class="fas fa-edit me-1"></i>
                                    @(Model.Status == ClaimStatus.Returned ? "Correct Claim" : "Edit Claim")
                                </a>

                                <form asp-action="Submit" method="post" class="d-grid">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@Model.Id" />
                                    <button type="submit" class="btn btn-success"
                                            onclick="return confirm('Are you sure you want to submit this claim for review? This action cannot be undone.')">
                                        <i class="fas fa-paper-plane me-1"></i>
                                        @(Model.Status == ClaimStatus.Returned ? "Resubmit for Review" : "Submit for Review")
                                    </button>
                                    <small class="text-center text-secondary mt-2">
                                        @if (Model.Status == ClaimStatus.Returned)
                                        {
                                            <text>Resubmitting will send your corrected claim back for review.</text>
                                        }
                                        else
                                        {
                                            <text>Submitting will lock the claim from further edits unless it is returned by a reviewer.</text>
                                        }
                                    </small>
                                </form>
                            }

                            <a asp-action="Dashboard" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Back to Dashboard
                            </a>
                        </div>
                    </div>
                </div>
            }

            // COORDINATOR ACTIONS ON DETAILS PAGE
            else if (currentUser?.Role == UserRole.Coordinator && Model.Status == ClaimStatus.Submitted)
            {
                <div class="card">
                    <div class="card-header bg-warning bg-opacity-10">
                        <h6 class="mb-0"><i class="fas fa-clipboard-check me-2"></i>Coordinator Actions</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#actionModal"
                                    data-action-type="Verify" data-claim-id="@Model.Id" data-claim-number="@Model.ClaimNumber">
                                <i class="fas fa-check me-1"></i> Verify Claim
                            </button>

                            <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#actionModal"
                                    data-action-type="Return" data-claim-id="@Model.Id" data-claim-number="@Model.ClaimNumber">
                                <i class="fas fa-undo me-1"></i> Return for Correction
                            </button>

                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#actionModal"
                                    data-action-type="Reject" data-claim-id="@Model.Id" data-claim-number="@Model.ClaimNumber">
                                <i class="fas fa-times me-1"></i> Reject Claim
                            </button>

                            <a asp-action="PendingCoordinator" class="btn btn-outline-secondary mt-3">
                                <i class="fas fa-arrow-left me-1"></i> Back to Pending Claims
                            </a>
                        </div>
                    </div>
                </div>
            }

            // MANAGER ACTIONS ON DETAILS PAGE
            else if (currentUser?.Role == UserRole.Manager && Model.Status == ClaimStatus.Verified)
            {
                <div class="card">
                    <div class="card-header bg-info bg-opacity-10">
                        <h6 class="mb-0"><i class="fas fa-user-tie me-2"></i>Manager Actions</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#actionModal"
                                    data-action-type="Approve" data-claim-id="@Model.Id" data-claim-number="@Model.ClaimNumber">
                                <i class="fas fa-check-double me-1"></i> Approve Claim
                            </button>

                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#actionModal"
                                    data-action-type="Reject" data-claim-id="@Model.Id" data-claim-number="@Model.ClaimNumber">
                                <i class="fas fa-times me-1"></i> Reject Claim
                            </button>

                            <a asp-action="PendingManager" class="btn btn-outline-secondary mt-3">
                                <i class="fas fa-arrow-left me-1"></i> Back to Pending Claims
                            </a>
                        </div>
                    </div>
                </div>
            }

            // HR OR OTHER ROLES - JUST VIEW
            else
            {
                <div class="card">
                    <div class="card-body text-center">
                        <a asp-action="Dashboard" asp-controller="@(currentUser?.Role == UserRole.HR ? "HR" : "Claims")" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Back to Dashboard
                        </a>
                    </div>
                </div>
            }
        }
    </div>
</div>

<!-- ACTION MODAL (for Coordinator and Manager) -->
<div class="modal fade" id="actionModal" tabindex="-1" aria-labelledby="actionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title" id="actionModalTitle">Action Required</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>You are about to <strong id="actionName"></strong> claim <strong id="actionClaimNumber"></strong>.</p>
                    <input type="hidden" name="id" id="actionClaimId" />
                    <div class="mb-3" id="comments-section">
                        <label class="form-label" id="comments-label">Comments (Optional)</label>
                        <textarea class="form-control" name="comments" rows="3"></textarea>
                    </div>
                    <div class="mb-3" id="reason-section" style="display: none;">
                        <label class="form-label" id="reason-label">Reason for Rejection *</label>
                        <input type="text" class="form-control" name="reason" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn" id="actionSubmitButton">Confirm</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const actionModal = document.getElementById('actionModal');

            if (actionModal) {
                actionModal.addEventListener('show.bs.modal', function (event) {
                    setupActionModal(event);
                });

                actionModal.addEventListener('hidden.bs.modal', function () {
                    const form = actionModal.querySelector('form');
                    if (form) form.reset();
                });
            }
        });
    </script>
}