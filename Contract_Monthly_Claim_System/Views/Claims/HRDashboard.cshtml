@{
    ViewData["Title"] = "HR Dashboard";
    var userName = ViewBag.UserName ?? "HR Administrator";
    var userRole = ViewBag.UserRole ?? "HR";
    var userInitials = ViewBag.UserInitials ?? "HR";
}

<div class="dashboard-layout">
    <aside class="sidebar">
        <div class="sidebar-profile">
            <div class="avatar-circle-lg">
                <span class="avatar-initials-lg">@userInitials</span>
            </div>
            <h5 class="mt-2 mb-0">@userName</h5>
            <small class="text-secondary">Human Resources</small>
            <div class="badge mt-1" style="background-color: var(--info-color); color: white;">@userRole</div>
        </div>
    </aside>

    <main class="main-content">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 border-bottom-themed">
            <h1 class="h2"><i class="fas fa-tachometer-alt me-2"></i>HR Dashboard</h1>
            <div class="d-flex gap-2">
                <a asp-action="CreateUser" class="btn btn-primary">
                    <i class="fas fa-user-plus me-1"></i>Add User
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card stat-card">
                    <div class="stat-card-icon" style="background-color: hsla(225, 85%, 60%, 0.15); color: var(--accent-color);">
                        <i class="fas fa-users"></i>
                    </div>
                    <div>
                        <div class="stat-label">Total Users</div>
                        <div class="stat-value">@ViewBag.TotalUsers</div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card stat-card">
                    <div class="stat-card-icon" style="background-color: hsla(145, 63%, 42%, 0.15); color: var(--success-color);">
                        <i class="fas fa-user-graduate"></i>
                    </div>
                    <div>
                        <div class="stat-label">Lecturers</div>
                        <div class="stat-value">@ViewBag.TotalLecturers</div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card stat-card">
                    <div class="stat-card-icon" style="background-color: hsla(38, 92%, 50%, 0.15); color: var(--warning-color);">
                        <i class="fas fa-file-invoice"></i>
                    </div>
                    <div>
                        <div class="stat-label">Total Claims</div>
                        <div class="stat-value">@ViewBag.TotalClaims</div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card stat-card">
                    <div class="stat-card-icon" style="background-color: hsla(190, 80%, 50%, 0.15); color: var(--info-color);">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div>
                        <div class="stat-label">Approved Claims</div>
                        <div class="stat-value">@ViewBag.ApprovedClaims</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-rocket me-2"></i>Quick Actions</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-3">
                            <a asp-action="CreateUser" class="btn btn-primary btn-lg">
                                <i class="fas fa-user-plus me-2"></i>Add New User
                            </a>
                            <a asp-action="Users" class="btn btn-success btn-lg">
                                <i class="fas fa-users-cog me-2"></i>Manage Users
                            </a>
                            <a asp-action="LecturerPerformance" class="btn btn-info btn-lg">
                                <i class="fas fa-chart-line me-2"></i>Performance Reports
                            </a>
                            <a asp-action="AllClaims" class="btn btn-warning btn-lg">
                                <i class="fas fa-list me-2"></i>View All Claims
                            </a>
                            <a asp-action="Reports" class="btn btn-secondary btn-lg">
                                <i class="fas fa-file-export me-2"></i>Export Reports
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>HR Responsibilities</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled mb-0">
                            <li class="mb-2">
                                <i class="fas fa-check text-success me-2"></i>
                                Create and manage all user accounts
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-check text-success me-2"></i>
                                Set lecturer hourly rates and departments
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-check text-success me-2"></i>
                                Update user information and permissions
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-check text-success me-2"></i>
                                Generate performance and financial reports
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-check text-success me-2"></i>
                                Monitor claim approval processes
                            </li>
                            <li>
                                <i class="fas fa-check text-success me-2"></i>
                                Export data for payroll processing
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>